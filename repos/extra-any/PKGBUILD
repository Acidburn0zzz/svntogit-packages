  install -D -m644 chrome/sk.jar "${pkgdir}/usr/lib/thunderbird-3.1/chrome/sk.jar"
  install -D -m644 chrome.manifest "${pkgdir}/usr/lib/thunderbird-3.1/chrome/sk.manifest"
}

