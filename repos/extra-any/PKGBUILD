build() {
  cd ${srcdir}
}

package_thunderbird-af() {
  pkgdesc="Afrikaans (South Africa) language packs for Thunderbird"
  cd ${srcdir}
  bsdtar xf thunderbird-i18n-$pkgver-af.xpi
  sed -i "s|jar:chrome/af.jar|jar:af.jar|" chrome.manifest
  install -D -m644 chrome/af.jar "${pkgdir}/usr/lib/thunderbird-3.1/chrome/af.jar"
  install -D -m644 chrome.manifest "${pkgdir}/usr/lib/thunderbird-3.1/chrome/af.manifest"
}

