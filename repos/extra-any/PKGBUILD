  install -D -m644 chrome.manifest "${pkgdir}/usr/lib/thunderbird-3.1/chrome/uk.manifest"
}

package_thunderbird-zh-cn() {
  pkgdesc="Chinese (simplified) language packs for Thunderbird"
  cd ${srcdir}
  bsdtar xf thunderbird-i18n-$pkgver-zh-CN.xpi
  sed -i "s|jar:chrome/zh-CN.jar|jar:zh-CN.jar|" chrome.manifest
  install -D -m644 chrome/zh-CN.jar "${pkgdir}/usr/lib/thunderbird-3.1/chrome/zh-CN.jar"
  install -D -m644 chrome.manifest "${pkgdir}/usr/lib/thunderbird-3.1/chrome/zh-CN.manifest"
}

