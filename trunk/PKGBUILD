  install -D -m644 chrome/zh-TW.jar "${pkgdir}/usr/lib/thunderbird-3.0/chrome/zh-TW.jar" || return 1
  install -D -m644 chrome.manifest "${pkgdir}/usr/lib/thunderbird-3.0/chrome/zh-TW.manifest" || return 1
}
