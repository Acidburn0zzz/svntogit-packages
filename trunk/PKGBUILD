pkgrel=1
pkgdesc="Language packs for Thunderbird"
arch=('any')
url="http://www.mozilla.com/"
license=('MPL' 'GPL')
depends=("thunderbird>=$pkgver")
groups=('thunderbird-i18n')
conflicts=('thunderbird-i18n')
